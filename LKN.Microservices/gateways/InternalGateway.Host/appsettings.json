{
  "Routes": [
    {

      "UpstreamPathTemplate": "/api/OrderService/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],

      "DownstreamPathTemplate": "/api/OrderService/{everything}",
      "DownstreamScheme": "https", //下游的 服务的主机头（Scheme），不是consul的
      /*
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44392
        }
      ],*/
      "ServiceName": "OrderServices",
      "LoadBalancerOptions": {
        "Type": "RoundRobin" //LeastConnection
      },
      //限流
      "RateLimitOptions": {
        "ClientWhitelist": [], //可以根据ip 来进行限流 
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      //熔断降级
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 1,
        "DurationOfBreak": 10000, // 10s
        "TimeoutValue": 5000
      },
      //缓存设置
      "FileCacheOptions": {
        "TtlSeconds": 10, //缓存10s（同一个地址请求就返回缓存结果)
        "Region": "OrderService" //缓存region
      }
    },
    {
      "UpstreamPathTemplate": "/api/ProductService/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
      "DownstreamPathTemplate": "/api/ProductService/{everything}",
      "DownstreamScheme": "https",
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "localhost",
      //    "Port": 44371
      //  }
      //]

      "ServiceName": "ProudctServices",
      "LoadBalancerOptions": {
        "Type": "RoundRobin" //LeastConnection
      },
      //熔断降级
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 1,
        "DurationOfBreak": 10000, // 10s
        "TimeoutValue": 5000
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7101",
    //配置 consul
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConsulRegistry": {
    "ServiceName": "OrderServices",
    "RegistryAddress": "http://localhost:8500",
    "HealthCheckAddress": "/HealthCheck"
  },
  "Cap": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672,
    "VirtualHost": "/",
    "FailedRetryInterval": 3,
    "FailedRetryCount": 10
  },

  "ConsulDiscovery": {
    "RegistryAddress": "http://127.0.0.1:8500"
  }
}
